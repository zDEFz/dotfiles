[menu]
executable = "rofi"
args = [
    "-dmenu",
    "-l", "20",
    "-p", "{prompt}",
    "-i"
]


 
[format]
output_format = 'Output {name}'
workspace_format = 'ws-{name} [{layout}] {output_name}'
