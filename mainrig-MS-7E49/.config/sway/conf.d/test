```
01-mediakeys.conf
$bm {
    # media control - general
    XF86AudioLowerVolume        exec pamixer --decrease 5     # XF86AudioLowerVolume $ensi wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
    XF86AudioRaiseVolume        exec pamixer --increase 5     # XF86AudioRaiseVolume $ensi wpctl set-volume --limit 1.0 @DEFAULT_AUDIO_SINK@ 5%+
    XF86AudioMicMute            $ensi wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle   # XF86AudioMicMute $ensi wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
    XF86AudioMute               $ensi wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle   # XF86AudioMute $ensi wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
    
    # media control - mpv
    XF86AudioNext               exec ~/.config/sway/scripts/mpv_handler.bash next  && playerctl next # XF86AudioNext exec ~/.config/sway/scripts/mpv_handler.bash next  && playerctl next
    XF86AudioPlay               exec ~/.config/sway/scripts/mpv_handler.bash pause && playerctl pause # XF86AudioPlay exec ~/.config/sway/scripts/mpv_handler.bash pause && playerctl pause
    XF86AudioPrev               exec ~/.config/sway/scripts/mpv_handler.bash prev  && playerctl previous # XF86AudioPrev exec ~/.config/sway/scripts/mpv_handler.bash prev  && player